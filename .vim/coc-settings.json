{
  "python.jediEnabled": false,
  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": [
    "--style",
    "{SPACES_AROUND_POWER_OPERATOR: True, SPACES_BEFORE_COMMENT: 1}"
  ],
  "coc.preferences.extensionUpdateCheck": "weekly",
  "suggest.enablePreview": false,
  "suggest.floatEnable": true,
  "explorer.file.tabCD": false,
  "explorer.previewAction.onHover": false,
  "explorer.quitOnOpen": false,
  "explorer.width": 30,
  "explorer.file.column.indent.indentLine": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.column.git.showIgnored": true,
  "explorer.keyMappingMode": "none",
  "explorer.buffer.showHiddenBuffers": false,
  "explorer.keyMappings": {
    "k": "nodePrev",
    "j": "nodeNext",
    "h": "collapse",
    "<cr>": "open",
    "e": "expandRecursive",
    "c": "collapseRecursive",
    "s": "toggleSelection",
    "<C-t>": "open:tab",
    "<C-x>": "open:split",
    "<C-v>": "open:vsplit",
    "gp": "gotoParent",
    ",m": "preview:labeling",
    "l": ["expandable?", "expand", "open"],
    "yy": "copyFile",
    "dd": "cutFile",
    "pp": "pasteFile",
    "dD": "deleteForever",
    "af": "addFile",
    "ad": "addDirectory",
    "cn": "rename",
    "<C-h>": "toggleHidden",
    "<C-r>": "refresh",
    "q": "quit",
    "?": "help"
  },
  "leetcode.language": "java",
  "yank.priority": -20,
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],

  "javascript.referencesCodeLens.enable": true,
  "javascript.showUnused": true,
  "javascript.suggest.names": true,
  "javascript.suggestionActions.enabled": true,
  "snippets.priority": -10,
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.usePythonx": true,
  "snippets.userSnippetsDirectory": "/root/.vim/ultisnips",
  "snippets.snipmate.enable": false,
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "prettier.statusItemText": "",
  "git.signOffset": 99,
  "git.addedSign.hlGroup": "GitAdd",
  "git.addGBlameToVirtualText": true,
  "git.enableGlobalStatus": true,
  "git.changeRemovedSign.hlGroup": "GitDeleteTopAndBottom",
  "git.changedSign.hlGroup": "GitModify",
  "git.enableGutters": true,
  "git.removedSign.hlGroup": "GitDeleteBottom",
  "git.topRemovedSign.hlGroup": "GitDeleteTop",
  "git.changedSign.text": "~~",
  "git.changeRemovedSign.text": "≃≃",
  "git.addedSign.text": "++",
  "git.removedSign.text": "--",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "list.source.grep.defaultArgs": ["-smartcase", "-regex"],
  "list.insertMappings": {
    "<C-c>": "do:exit",
    "<C-j>": "do:next",
    "<C-k>": "do:previous",
    "<C-f>": "do:toggle"
  },
  "list.normalMappings": {
    "<C-c>": "do:exit",
    "<C-f>": "do:toggle"
  },
  "list.previewSplitRight": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": []
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    }
  },
  "java.errors.incompleteClasspath.severity": "ignore"
}

