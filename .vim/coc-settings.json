{
  "python.jediEnabled": false,
  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": [
    "--style",
    "{SPACES_AROUND_POWER_OPERATOR: True, SPACES_BEFORE_COMMENT: 1}"
  ],
  "coc.preferences.extensionUpdateCheck": "weekly",
  "suggest.enablePreview": false,
  "suggest.floatEnable": true,
  "explorer.file.tabCD": false,
  "explorer.previewAction.onHover": false,
  "explorer.quitOnOpen": false,
  "explorer.width": 30,
  "explorer.file.column.indent.indentLine": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.column.git.showIgnored": true,
  "explorer.keyMappingMode": "none",
  "explorer.buffer.showHiddenBuffers": false,
  "explorer.keyMappings": {
    "k": "nodePrev",
    "j": "nodeNext",
    "h": "collapse",
    "<cr>": "open",
    "e": "expandRecursive",
    "c": "collapseRecursive",
    "s": "toggleSelection",
    "<C-t>": "open:tab",
    "<C-x>": "open:split",
    "<C-v>": "open:vsplit",
    "gp": "gotoParent",
    ",m": "preview:labeling",
    "l": ["expandable?", "expand", "open"],
    "yy": "copyFile",
    "dd": "cutFile",
    "pp": "pasteFile",
    "dD": "deleteForever",
    "af": "addFile",
    "ad": "addDirectory",
    "cn": "rename",
    "<C-h>": "toggleHidden",
    "<C-r>": "refresh",
    "q": "quit",
    "?": "help"
  },

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": []
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    }
  },
  "java.errors.incompleteClasspath.severity": "ignore"
}

